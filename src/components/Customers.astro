---
const customers = [
    {
        name: 'Civa', image: '/images/customers/civa.png'
    },
    {
        name: 'Faber Castell', image: '/images/customers/faber-castell.png'
    },
    {
        name: 'Mincetur', image: '/images/customers/mincetur.png'
    },
    {
        name: 'Mahindra', image: '/images/customers/mahindra.png'
    },
    {
        name: 'Textil prima', image: '/images/customers/texprima.png'
    },
    {
        name: 'CIP', image: '/images/customers/cip.png'
    },
    {
        name: 'Banmac', image: '/images/customers/baanmac.png'
    },
    {
        name: 'Corpac', image: '/images/customers/corpac.png'
    },
    {
        name: 'Digicorp', image: '/images/customers/digicorp.png'
    }
]
---
<div class="p-8 bg-white rounded-lg shadow-md">
    <div class="relative overflow-hidden">
        <!-- Contenedor principal del slider -->
        <div class="flex transition-transform duration-700" id="client-slider">
            {customers.map((customer) => (
                <div class="flex-shrink-0 w-full md:w-1/3 lg:w-1/4 p-4">
                    <img src={customer.image} alt={customer.name} class="mx-auto" />
                </div>
            ))}
        </div>

        <!-- Botones de navegaciÃ³n -->
        <div class="absolute inset-y-0 left-4 flex items-center">
            <button id="prev" class="bg-transparent text-blue-600 hover:bg-blue-600 hover:text-white transition-colors duration-300 p-2 rounded-full">
                &#10094;
            </button>
        </div>
        <div class="absolute inset-y-0 right-4 flex items-center">
            <button id="next" class="bg-transparent text-blue-600 hover:bg-blue-600 hover:text-white transition-colors duration-300 p-2 rounded-full">
                &#10095;
            </button>
        </div>
    </div>
</div>