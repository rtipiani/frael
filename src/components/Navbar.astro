<script>
    document.addEventListener('DOMContentLoaded', function() {
        const navbar = document.getElementById('main-navbar');
        const originalPosition = navbar.offsetTop;

        // Fijar la barra de navegación al hacer scroll
        window.addEventListener('scroll', function() {
            if (window.pageYOffset > originalPosition) {
                navbar.classList.add('fixed', 'top-0', 'bg-white', 'shadow-lg');
            } else {
                navbar.classList.remove('fixed', 'top-0', 'bg-white', 'shadow-lg');
            }
        });

        const links = document.querySelectorAll('.nav-link');
        const currentPath = window.location.pathname;

        links.forEach(link => {
            if (link.getAttribute('href') === currentPath) {
                link.classList.add('active', 'text-white', 'bg-gradient-to-r', 'from-primary', 'to-blue-950', 'rounded-md', 'px-3', 'transition-all', 'transform', 'duration-300', 'ease-in-out');
            } else {
                link.classList.remove('active', 'text-primary');
            }
        });
    });
</script>
