---
const currentPath = Astro.url.pathname;
---
<nav id="main-navbar" class="bg-white w-full z-50 shadow-md">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-20">
            <div class="flex-shrink-0 flex items-center">
                <a href="" class="text-3xl font-bold text-gray-800 hover:text-gray-600">LOGO</a>
            </div>
            <div class="hidden sm:flex sm:ml-auto space-x-8">
                <a href="/" class="px-3 py-2 rounded-md text-sm font-medium transition duration-300">Inicio</a>
                <a href="/about" class="px-3 py-2 rounded-md text-sm font-medium transition duration-300">Nosotros</a>
                <a href="/products" class="px-3 py-2 rounded-md text-sm font-medium transition duration-300">Productos</a>
                <a href="/services" class="px-3 py-2 rounded-md text-sm font-medium transition duration-300">Servicios</a>
                <a href="/contact" class="px-3 py-2 rounded-md text-sm font-medium transition duration-300">Contáctenos</a>
            </div>
            <div class="sm:hidden flex items-center">
                <button id="menu-button" class="inline-flex items-center justify-center p-2 rounded-md text-gray-800 hover:text-gray-600 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-gray-600">
                    <svg class="h-6 w-6" stroke="currentColor" fill="none" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
                    </svg>
                </button>
            </div>
        </div>
    </div>
    <div id="mobile-menu" class="hidden sm:hidden">
        <div class="bg-white shadow-lg rounded-lg py-3 transition-all duration-300 text-center">
            <a href="/" class="block text-lg font-semibold text-gray-800 transition duration-300 border-b border-gray-200 px-3 py-2">Inicio</a>
            <a href="/about" class="block text-lg font-semibold text-gray-800 transition duration-300 border-b border-gray-200 px-3 py-2">Nosotros</a>
            <a href="/products" class="block text-lg font-semibold text-gray-800 transition duration-300 border-b border-gray-200 px-3 py-2">Productos</a>
            <a href="/services" class="block text-lg font-semibold text-gray-800 transition duration-300 border-b border-gray-200 px-3 py-2">Servicios</a>
            <a href="/contact" class="block text-lg font-semibold text-gray-800 transition duration-300 px-3 py-2">Contáctenos</a>
        </div>
    </div>
</nav>
<script>
    document.addEventListener('DOMContentLoaded', function() {
    const currentPath = window.location.pathname;
    const navLinks = document.querySelectorAll('nav a');

    navLinks.forEach(link => {
        if (link.getAttribute('href') === currentPath) {
            link.classList.add('text-white', 'font-bold', 'bg-primary');
            link.classList.remove('text-gray-800', 'hover:text-gray-600');
        } else {
            link.classList.add('text-gray-800', 'hover:text-gray-600');
        }
    });
});
</script>